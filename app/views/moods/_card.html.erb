<div class="card mb-3">
  <h2 class="card-header h4">
    Mood #<%= mood.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Mood</dt>
      <dd><%= mood.mood %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back mood, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_mood_url(mood), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to mood, method: :delete, data: { confirm: "Do you really want to delete this mood?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(mood.updated_at) %> ago
  </div>
</div>
