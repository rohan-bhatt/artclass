<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Artworks

    <a data-toggle="collapse" href="#mood_artworks_new_form">
      Add artwork
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @mood.artworks.each do |artwork| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to artwork, artwork %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to artwork, method: :delete, data: { confirm: "Do you really want to delete this artwork" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="mood_artworks_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "moods/mood_artworks_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
