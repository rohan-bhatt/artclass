<!-- Form artwork start -->
<%= form_with(model: @artwork, local: true) do |f| %>
<!-- Form artwork end -->

  <!-- Label and input for image start -->
  <div class="form-group">
    <%= f.label :image %>

    <!-- Input for image start -->
    <%= f.file_field :image, class: "form-control" %>
    <!-- Input for image end -->
  </div>
  <!-- Label and input for image end -->

  <!-- Label and input for artist_id start -->
  <div class="form-group">
    <%= f.label :artist_id %>

    <!-- Input for artist_id start -->
    <%= f.text_field :artist_id, class: "form-control" %>
    <!-- Input for artist_id end -->
  </div>
  <!-- Label and input for artist_id end -->

  <!-- Label and input for title start -->
  <div class="form-group">
    <%= f.label :title %>

    <!-- Input for title start -->
    <%= f.text_field :title, class: "form-control" %>
    <!-- Input for title end -->
  </div>
  <!-- Label and input for title end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <%= f.label :description %>
    <!-- Input for description start -->
    <%= f.text_area :description, rows: "3", class: "form-control" %>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for dimensions_height start -->
  <div class="form-group">
    <%= f.label :dimensions_height %>

    <!-- Input for dimensions_height start -->
    <%= f.text_field :dimensions_height, class: "form-control" %>
    <!-- Input for dimensions_height end -->
  </div>
  <!-- Label and input for dimensions_height end -->

  <!-- Label and input for dimensions_width start -->
  <div class="form-group">
    <%= f.label :dimensions_width %>

    <!-- Input for dimensions_width start -->
    <%= f.text_field :dimensions_width, class: "form-control" %>
    <!-- Input for dimensions_width end -->
  </div>
  <!-- Label and input for dimensions_width end -->

  <!-- Label and input for medium_id start -->
  <div class="form-group">
    <%= f.label :medium_id %>

    <!-- Input for medium_id start -->
    <%= f.text_field :medium_id, class: "form-control" %>
    <!-- Input for medium_id end -->
  </div>
  <!-- Label and input for medium_id end -->

  <!-- Label and input for mood_id start -->
  <div class="form-group">
    <%= f.label :mood_id %>

    <!-- Input for mood_id start -->
    <%= f.text_field :mood_id, class: "form-control" %>
    <!-- Input for mood_id end -->
  </div>
  <!-- Label and input for mood_id end -->

  <!-- Label and input for prompt_id start -->
  <!-- Input for prompt_id start -->
  <%= f.hidden_field :prompt_id, value: @prompt.id %>
  <!-- Input for prompt_id end -->
  <!-- Label and input for prompt_id end -->

  <%= f.submit "Create artwork", class: "btn btn-block btn-outline-secondary" %>
<% end %>
