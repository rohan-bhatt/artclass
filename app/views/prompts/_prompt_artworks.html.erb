<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Artworks

    <a data-toggle="collapse" href="#prompt_artworks_new_form">
      Add artwork
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @prompt.artworks.each do |artwork| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to artwork, artwork %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <% if current_artist == artwork.artist %>
          <%= link_to artwork, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="prompt_artworks_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "prompts/prompt_artworks_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
