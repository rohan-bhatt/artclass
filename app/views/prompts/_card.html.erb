<div class="card mb-3">
  <h2 class="card-header h4">
    Prompt #<%= prompt.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Title</dt>
      <dd><%= prompt.title %></dd>

      <dt>Body</dt>
      <dd><%= prompt.body %></dd>

      <dt>Artist</dt>
      <dd>
        <% if @prompt.prompter.present? %>
          <%= link_to prompt.prompter, prompt.prompter %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back prompt, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_artist == @prompt.prompter %>
          <%= link_to edit_prompt_url(prompt), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_artist == @prompt.prompter %>
          <%= link_to prompt, method: :delete, data: { confirm: "Do you really want to delete this prompt?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(prompt.updated_at) %> ago
  </div>
</div>
