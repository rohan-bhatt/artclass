        <% mood_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :mood_id %>
    <%= f.collection_select :mood_id, Mood.all, :id, :to_s, {}, class: "form-control" %>
    <% if mood_was_invalid %>
      <% artwork.errors.full_messages_for(:mood).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
