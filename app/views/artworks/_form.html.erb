    <%= f.label :prompt_id %>
    <%= f.collection_select :prompt_id, Prompt.all, :id, :to_s, {}, class: "form-control" %>
    <% if prompt_was_invalid %>
      <% artwork.errors.full_messages_for(:prompt).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
