      <% artwork.errors.full_messages_for(:medium).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% mood_class = "form-control" %>
    <% mood_was_invalid = artwork.errors.include?(:mood) %>

