      <% artwork.errors.full_messages_for(:dimensions_height).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% dimensions_width_class = "form-control" %>
    <% dimensions_width_was_invalid = artwork.errors.include?(:dimensions_width) %>

    <% if was_validated %>
      <% if dimensions_width_was_invalid %>
        <% dimensions_width_class << " is-invalid" %>
      <% else %>
        <% dimensions_width_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :dimensions_width %>
    <%= f.text_field :dimensions_width, class: dimensions_width_class, placeholder: "Enter dimensions width" %>
    <% if dimensions_width_was_invalid %>
      <% artwork.errors.full_messages_for(:dimensions_width).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% medium_class = "form-control" %>
