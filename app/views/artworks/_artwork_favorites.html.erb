<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Favorites

    <a data-toggle="collapse" href="#artwork_favorites_new_form">
      Add favorited work
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @artwork.favorites.each do |favorited_work| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to favorited_work, favorited_work %>

        <%= link_to favorited_work, method: :delete, data: { confirm: "Do you really want to delete this favorited_work" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="artwork_favorites_new_form">
        <%= render partial: "artworks/artwork_favorites_new_form" %>
      </div>
    </div>

  </ul>
</div>
