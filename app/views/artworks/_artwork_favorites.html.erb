<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Favorites

    <a data-toggle="collapse" href="#artwork_favorites_new_form">
      Add favorited work
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @artwork.favorites.each do |favorited_work| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to favorited_work, favorited_work %>
        <!-- Show link end -->

        <!-- Delete link start -->
        <%= link_to favorited_work, method: :delete, data: { confirm: "Do you really want to delete this favorited_work" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
        <!-- Delete link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="artwork_favorites_new_form">
        <!-- New associationcollection form start -->

        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
