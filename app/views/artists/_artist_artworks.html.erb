<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Artworks

    <a data-toggle="collapse" href="#artist_artworks_new_form">
      Add artwork
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @artist.artworks.each do |artwork| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <!-- Show link start -->
        <%= link_to artwork, artwork %>
        <!-- Show link end -->

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="artist_artworks_new_form">
        <!-- New associationcollection form start -->
        <%= render partial: "artists/artist_artworks_new_form" %>
        <!-- New associationcollection form end -->
      </div>
    </div>

  </ul>
</div>
